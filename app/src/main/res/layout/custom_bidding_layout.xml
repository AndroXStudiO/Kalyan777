<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_border_dark"
    android:backgroundTint="@color/white"
    android:id="@+id/conformLayout"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="2dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/ll_digit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:textSize="10sp"
            android:id="@+id/adigitsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digit"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
        <com.google.android.material.textview.MaterialTextView
            android:textSize="10sp"
            android:id="@+id/adigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            tools:ignore="RelativeOverlap" />
    </LinearLayout>
    <View
        android:layout_below="@id/ll_digit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_below="@id/ll_digit"
        android:orientation="horizontal"
        android:id="@+id/ll_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:textSize="10sp"
            android:id="@+id/coin_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:paddingStart="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            tools:ignore="RtlSymmetry" />
        <com.google.android.material.textview.MaterialTextView
            android:textSize="10sp"
            android:id="@+id/apoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"/>
    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/acrossBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_cancel" />

</RelativeLayout>