<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/purple_700"
    app:cardElevation="10dp"
    app:strokeColor="@color/white"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.8"
            android:paddingStart="20dp"
            android:paddingEnd="3dp"
            android:paddingVertical="5dp">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/agameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Name(game type)"
                android:textColor="@color/white"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/agameNumberOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Number : "
                android:textSize="10sp"
                android:textColor="@color/black"
                tools:ignore="SmallSp" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/agameNumberClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Number : 5"
                android:textSize="10sp"
                android:textColor="@color/black"
                tools:ignore="SmallSp"
                android:visibility="gone"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/agameDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 Jul 2020 12:51:27 PM"
                android:textSize="12sp"
                android:textColor="@color/hintTextColor"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:paddingStart="3dp"
            android:paddingEnd="15dp"
            android:paddingVertical="5dp">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/agameSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session : CLOSE"
                android:textColor="@color/white"
                android:textSize="10sp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/abidPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 Points"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/teal_200"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/awinPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="140 Points"
                android:textStyle="bold"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/green"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>