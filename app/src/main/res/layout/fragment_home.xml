<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:id="@+id/mswipe_ref_lyt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/main_slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:sliderAnimationDuration="1000"
            app:sliderScrollTimeInSec="2"
            app:sliderIndicatorEnabled="false"
            app:sliderStartAutoCycle="true"/>

        <LinearLayout
            android:id="@+id/buttonLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:layout_below="@id/main_slider">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rl_whatsapp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WhatsApp"
                android:gravity="center"
                android:background="@drawable/ic_bg_editbox"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_whatsappicon"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                android:drawablePadding="5dp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/telegram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Telegram"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/ic_bg_editbox"
                android:backgroundTint="#FF3CBDE8"
                android:textColor="@color/white"
                android:drawableStart="@drawable/telegram_icon"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                android:layout_toEndOf="@id/rl_whatsapp"
                android:layout_marginHorizontal="10dp"
                android:drawablePadding="5dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add point"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/ic_bg_editbox"
                android:backgroundTint="#9C27B0"
                android:textColor="@color/white"
                android:drawableStart="@drawable/baseline_add_circle_outline_24"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                android:drawablePadding="5dp"
                android:visibility="gone"
                android:id="@+id/addFundText"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/buttonLyt">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mbtn_starLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Play Starline"
                            android:textAllCaps="true"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mbtn_galiDesawar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mbtn_starLine">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Play Galidesawar"
                            android:textAllCaps="true"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_star_24"
                            android:tint="@color/button_bg"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/card1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/a_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/custom_mg_game_list_layout_new"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/prgrss_bar"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>